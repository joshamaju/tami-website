---
import "../styles/global.css";
import { ArrowRight, Github } from "lucide-react";
import { CopyToClipboard } from "../components/copytoclipboard";
import Button from "../components/button.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Tami</title>
  </head>
  <body class="bg-white dark:bg-gray-950">
    <main class="flex flex-col items-center w-full">
      <section class="w-full py-12 sm:py-16 md:py-24 lg:py-32 relative">
        <div class="container relative px-4 sm:px-6 lg:px-8 mx-auto">
          <div class="max-w-4xl mx-auto text-center">
            <div
              class="flex flex-wrap items-center justify-center gap-2 sm:gap-3 mb-4 sm:mb-6"
            >
              <span
                class="px-3 sm:px-4 py-1 sm:py-1.5 text-xs sm:text-sm font-medium rounded-full bg-orange-100/80 text-orange-600 dark:bg-orange-900/80 dark:text-orange-300 backdrop-blur-sm"
              >
                Open Source
              </span>
              <span
                class="px-3 sm:px-4 py-1 sm:py-1.5 text-xs sm:text-sm font-medium rounded-full bg-gray-100/80 text-gray-600 dark:bg-gray-800/80 dark:text-gray-300 backdrop-blur-sm"
              >
                MIT License
              </span>
            </div>
            <h1
              class="text-3xl sm:text-4xl md:text-5xl lg:text-7xl font-bold tracking-tight mb-4 sm:mb-6 lg:mb-8 bg-clip-text text-transparent bg-gradient-to-r from-orange-600 via-orange-500 to-red-600"
            >
              No BS API client
            </h1>
            <p
              class="text-base sm:text-lg md:text-xl lg:text-2xl text-[#aaa5a1] mb-6 sm:mb-8 lg:mb-10 max-w-2xl mx-auto"
            >
              A high-performance, open-source API client. Built with stack54 and
              modern web standards.
            </p>
            <div
              class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center mb-6 sm:mb-8"
            >
              <!-- <Button
                size="lg"
                href="/docs/api"
                class="w-full sm:w-auto font-medium text-sm sm:text-base h-10 sm:h-12 px-6 sm:px-8 bg-gradient-to-r from-orange-600 to-red-600 hover:from-orange-700 hover:to-red-700"
              >
                Quick Start
                <ArrowRight class="ml-2 h-4 sm:h-5 w-4 sm:w-5" />
              </Button> -->

              <div
                class="relative flex items-center justify-center gap-2 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm rounded-lg p-3 sm:p-3 border border-orange-200/50 dark:border-orange-800/50"
              >
                <code
                  class="text-xs sm:text-sm md:text-base text-gray-800 dark:text-gray-200"
                >
                  npx tami-client
                </code>
                <CopyToClipboard text="npx tami-client" />
              </div>

              <Button
                size="lg"
                href="/docs/api"
                class="w-full sm:w-auto font-medium text-sm sm:text-base h-10 sm:h-12 px-6 sm:px-8 bg-gradient-to-r from-orange-600 to-red-600 hover:from-orange-700 hover:to-red-700"
              >
                <Github class="mr-2 h-4 sm:h-5 w-4 sm:w-5" />
                Star on GitHub
              </Button>

              <!-- <Button
                size="lg"
                variant="outline"
                href="https://git.new/tusflow"
                class="w-full sm:w-auto h-10 sm:h-12 px-6 sm:px-8 text-sm sm:text-base hover:bg-orange-50 dark:hover:bg-orange-950/20 dark:text-white"
              >
                <Github class="mr-2 h-4 sm:h-5 w-4 sm:w-5" />
                Star on GitHub
              </Button> -->
            </div>
            <div class="relative group mx-auto max-w-2xl">
              <div
                class="absolute inset-0 bg-gradient-to-r from-orange-500/10 to-red-500/10 rounded-xl blur group-hover:blur-xl transition-all"
              >
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body::before {
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    content: "";
    position: absolute;
    background: linear-gradient(to right, #80808012 1px, transparent 1px),
      linear-gradient(to bottom, #80808012 1px, transparent 1px);
    background-size: 24px 24px;
  }

  body::after {
    top: 0;
    left: 0;
    right: 0;
    content: "";
    opacity: 20%;
    height: 200px;
    position: absolute;
    background: linear-gradient(to bottom, #ffedd4, transparent);
  }

  @media (prefers-color-scheme: dark) {
    body::after {
      background: linear-gradient(to bottom, #7e2a0c, transparent);
    }

    body::before {
      background: linear-gradient(to right, #ffffff12 1px, transparent 1px),
        linear-gradient(to bottom, #ffffff12 1px, transparent 1px);
      background-size: 24px 24px;
    }
  }
</style>
